<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 2.1 -->
   	<style name="devn_spinner" parent="@android:style/Widget.Spinner">
	    <item name="android:background">@drawable/sel_bkgr_spn</item>
	</style>
	
    <!-- 2.1 -->
   	<style name="devn_button" parent="@android:style/Widget.Button">
	    <item name="android:background">@drawable/sel_bkgr_btn</item>
	</style>
    
    <!-- 2.1 -->
   	<style name="devn_dialog" parent="@android:style/Theme.Dialog">

	</style>
	
   	<!-- 2.1 -->
    <style name="devn_theme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:buttonStyle">@style/devn_button</item>
        <item name="android:buttonStyleSmall">@style/devn_button</item>
        <item name="android:alertDialogStyle">@style/devn_dialog</item>
        <item name="android:spinnerStyle">@style/devn_spinner</item>
    </style>

    <style name="menu_button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@drawable/btn_menu</item>
        <!-- 2.1 removed 
        <item name="android:layout_marginBottom">@dimen/menu_btn_margin_bottom</item>
        <item name="android:layout_centerHorizontal">true</item>
        -->
        <item name="android:layout_height">264dp</item>
        <item name="android:layout_width">190dp</item>        
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:paddingTop">25dp</item>
    </style>
    
    <style name="menu_side_icon" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sel_bkgr_touched</item>
	</style>
    
    <style name="how_button" parent="devn_button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:layout_width">@dimen/how_btn_width</item>
    </style>

    <style name="UICard" parent="@android:style/Widget.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:layout_width">@dimen/UICard_width</item>
        <item name="android:layout_height">@dimen/UICard_height</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

	<style name="UIStackTop" parent="@style/UICard">
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/total_divider</item>
        <item name="android:src">@drawable/divider_trans</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/total_divider</item>
        <item name="android:src">@drawable/divider_trans</item>
    </style>
    
    <style name="how_divider" parent="@style/divider_horizontal">
        <item name="android:layout_marginBottom">@dimen/how_divider_margin_bottom</item>
    </style>
    
    <style name="how_title" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="how_title_special" parent="@style/how_title">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="how_content" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">@dimen/how_content_margin_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	<style name="dlg_ace_suits" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/sel_bkgr_touched</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>    
</resources>