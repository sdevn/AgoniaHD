<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res/devN.games.agonia"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dlg_finish_p1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_p1_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dlg_finish_p1_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_divider"
        android:contentDescription="@string/divider"
        android:src="@drawable/divider_trans" />

    <TextView
        android:id="@+id/dlg_finish_p2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_p2_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dlg_finish_p2_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_divider"
        android:contentDescription="@string/divider"
        android:src="@drawable/divider_trans" />

    <TextView
        android:id="@+id/dlg_finish_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winner"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_divider"
        android:contentDescription="@string/divider"
        android:src="@drawable/divider_trans" />

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        app:columnCount="7"
        app:rowCount="9" >

        <!-- border left line -->

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_vertical"
            app:layout_row="0"
            app:layout_rowSpan="9"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <!-- border top line -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            app:layout_column="0"
            app:layout_columnSpan="7"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowSpan="1"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_columnSpan="7"
            app:layout_gravity="center_horizontal"
            app:layout_row="1"
            app:layout_rowSpan="1"
            android:text="@string/total"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- line between Total/WinsPoints -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            app:layout_column="0"
            app:layout_columnSpan="7"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2"
            app:layout_rowSpan="1"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <!-- line between PlayerNames/Wins -->

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_vertical"
            app:layout_row="3"
            app:layout_rowSpan="6"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="3"
            app:layout_rowSpan="1"
            android:text="@string/wins"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- line between Wins/Points -->

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            app:layout_column="4"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_vertical"
            app:layout_row="3"
            app:layout_rowSpan="6"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            app:layout_column="5"
            app:layout_columnSpan="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="3"
            app:layout_rowSpan="1"
            android:text="@string/points"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- border right line -->

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            app:layout_column="6"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_vertical"
            app:layout_row="0"
            app:layout_rowSpan="9"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <!-- line between WinsPoints/PlayerNames -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            app:layout_column="0"
            app:layout_columnSpan="7"
            app:layout_gravity="fill_horizontal"
            app:layout_row="4"
            app:layout_rowSpan="1"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <TextView
            android:id="@+id/dlg_finish_border_p1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_gravity="left"
            app:layout_row="5"
            app:layout_rowSpan="1"
            android:text="@string/default_p1_name"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dlg_finish_border_p1_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="5"
            app:layout_rowSpan="1"
            android:text="@string/blank"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dlg_finish_border_p1_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="5"
            app:layout_columnSpan="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="5"
            app:layout_rowSpan="1"
            android:text="@string/blank"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- line between PlayerNames -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            app:layout_column="0"
            app:layout_columnSpan="7"
            app:layout_gravity="fill_horizontal"
            app:layout_row="6"
            app:layout_rowSpan="1"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />

        <TextView
            android:id="@+id/dlg_finish_border_p2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_gravity="left"
            app:layout_row="7"
            app:layout_rowSpan="1"
            android:text="@string/default_p2_name"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dlg_finish_border_p2_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="7"
            app:layout_rowSpan="1"
            android:text="@string/blank"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dlg_finish_border_p2_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="5"
            app:layout_columnSpan="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="7"
            app:layout_rowSpan="1"
            android:text="@string/blank"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- border bottom line -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            app:layout_column="0"
            app:layout_columnSpan="7"
            app:layout_gravity="fill_horizontal"
            app:layout_row="8"
            app:layout_rowSpan="1"
            android:background="@color/total_divider"
            android:contentDescription="@string/divider"
            android:src="@drawable/divider_trans" />
    </android.support.v7.widget.GridLayout>

</LinearLayout>